<div class="container">
  <div class="row mt-3">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <form
        action="/users/create-user"
        method="post"
        role="form"
        enctype="application/x-www-form-urlencoded"
      >
        <center> <legend><h3>Create new account</h3></legend></center>
         {{#if registerErr}}
            <p class="error">User already Exist</p>
          {{/if}}
        <div class="form-group">
          <label for="first_name">Name</label>
          <input
            type="text"
            class="form-control"
            name="name"
            id="name"
            placeholder="First Name"
          />
        </div>

        <div class="form-group">
          <label for="email">Email Address</label>
          <input
            type="text"
            class="form-control"
            name="email"
            id="email"
            placeholder="Email Address"
          />
        </div>

        <div class="form-group">
          <label for="pw">Password</label>
          <input
            type="password"
            class="form-control"
            name="password"
            id="password"
            placeholder="Password"
          />
        </div>

        <a href="#">
          <button
            class="btn btn-primary btn-lg float-right"
            type="submit"
          >signup</button></a>
        <div class="ml-auto">

          <a href="/users/login">
            <h4>Already have account ?</h4>
          </a>

        </div>
      </form>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>