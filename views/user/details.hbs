<div class="container">
  <div class="row mt-3">
    <div class="col-md-4">
      {{#if user}}
        <form
          action="/users/delete-account"
          method="post"
          role="form"
          enctype="application/x-www-form-urlencoded"
        >
          <center> <legend><h3>Account details</h3></legend></center>
          <div class="form-group">
            <label for="first_name">Name </label>
            :
            {{user.name}}
          </div>
          <div class="form-group">
            <label for="email">Email </label>
            :
            {{user.email}}
          </div>
          <div class="form-group">
            <label for="age">Age</label>
            :
            {{user.age}}
          </div>
          <div class="form-group">
            <label for="place">Place</label>
            :
            {{user.place}}
          </div>
          <button
            class="btn btn-danger btn-lg float-right"
            type="submit"
          >Delete-Account</button>
        </form>
      {{/if}}
    </div>
    <div class="col-md-4">
      <form
        action="/users/update-user"
        method="post"
        role="form"
        enctype="application/x-www-form-urlencoded"
      >
        <center> <legend><h3>Update Account Details</h3></legend></center>
        {{#if error}}
          <p class="error">{{error}}</p>
        {{/if}}
        <div class="form-group">
          <label for="first_name">Name</label>
          <input
            type="text"
            class="form-control"
            name="name"
            id="name"
            placeholder="First Name"
          />
        </div>
        <div class="form-group">
          <label for="age">Age</label>
          <input
            type="text"
            class="form-control"
            name="age"
            id="age"
            placeholder="Age"
          />
        </div>
        <div class="form-group">
          <label for="place">Place</label>
          <input
            type="text"
            class="form-control"
            name="place"
            id="place"
            placeholder="place"
          />
        </div>
        <div class="form-group">
          <label for="pw">Password</label>
          <input
            type="password"
            class="form-control"
            name="password"
            id="password"
            placeholder="Password"
            required
          />
        </div>
        <div class="form-group">
          <label for="pw">New Password</label>
          <input
            type="password"
            class="form-control"
            name="newpassword"
            id="password"
            placeholder="Password"
            required
          />
        </div>
        <a href="#">
          <button
            class="btn btn-primary btn-lg float-right"
            type="submit"
          >Update</button></a>
      </form>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>